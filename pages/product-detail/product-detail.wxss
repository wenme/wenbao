/* pages/product-detial/product-detial.wxss */

page {
    background-color: #f5f6f8;
    font-size: 13pt;
}

.pro-company-chose.left {
  height: 110rpx;
  background-image: url(https://resource.wenme.cc/static/images/company-icon.png);
  background-size: 46rpx;
  background-repeat: no-repeat;
  background-position: 76rpx center;
  text-indent: 30rpx;
  position: relative;
  color: #4682f0;
}
.pro-company-chose.left .lineaa {
  width: 1px;
  height: 110rpx;
  background: #e9e9e9;
  position: absolute;
  right: 0px;
  top: 0px;
}
.pro-company-chose.right {
  color: #09bb07;
  height: 110rpx;
  background-image: url(https://resource.wenme.cc/static/images/down-icon.png);
  background-size: 46rpx;
  background-repeat: no-repeat;
  background-position: 46rpx center;
  text-indent: 50rpx;
}

.company-info-row {
  min-height:30rpx;
  line-height:30rpx;
  font-size: 24rpx;
  padding: 10rpx 0;
}

.company-info-row .gradecon {
  width: 350rpx;
  float: left;
  color: #ff7800;
  position:relative;
}
.company-info-row .gradecon.insured_cover {
  float: right;
  width: auto;
  font-size:24rpx;
  color:#aaaaaa;
}
.company-info-row .gradecon.insured_cover image {
  width: 24rpx;
  margin: 0 4rpx;
}
.company-info-row .gradecon image {
  width:162rpx;
  height:24rpx;
}
.company-info-row .gradecon .no-grade {
  font-size:24rpx;
}

.product-item-con {
  font-size: 24rpx;
  line-height: 30rpx;
}